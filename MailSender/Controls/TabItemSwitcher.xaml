<UserControl x:Class="WpfTestMailSender.Controls.TabItemSwitcher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTestMailSender.Controls"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <UniformGrid Rows="1" Button.Click ="ButtonBase_OnClick">
        <Button Name="LeftButton">
            <fa:ImageAwesome Height="18" Icon="ArrowLeft" />
        </Button>
        <Button Name="RightButton">
            <fa:ImageAwesome Height="18" Icon="ArrowRight" />
        </Button>
    </UniformGrid>
</UserControl>
