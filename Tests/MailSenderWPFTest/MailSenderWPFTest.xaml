<Window x:Class="MailSenderWPFTest.MailSenderWpfTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSenderWPFTest"
        mc:Ignorable="d"
        Title="MailSenderWpfTestWindow" Height="160" Width="300">
    <Grid>
        <Button Name="BtnStart"
                Content="Start" Click="BtnStart_OnClick"
                HorizontalAlignment="Left"
                Margin="9,46,0,0" 
                VerticalAlignment="Top" Width="75"/>
        <TextBlock Name="ResultText" 
                   HorizontalAlignment="Left"
                   Margin="29,11,0,0"
                   TextWrapping="Wrap" 
                   Text="Результат будет здесь." 
                   VerticalAlignment="Top"/>
        <ProgressBar Name="ProgressInformer" 
                     HorizontalAlignment="Left" 
                     Height="20" 
                     Margin="9,91,0,0"
                     VerticalAlignment="Top" 
                     Width="250"/>
        <Button Name="BtnCancel" 
                Content="Cancel" Click="BtnCancel_OnClick"
                HorizontalAlignment="Left"
                Margin="184,46,0,0" 
                VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
